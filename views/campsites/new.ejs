<%- include("../partials/header") %>
  
    <div class="container">
        <h1 style="text-align:center;margin-bottom:20px">Enter new campsite information here</h1>
        <div style="width:30%;margin:0 auto;">
            <form action="/campsites" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="img" placeholder="image URL">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="description">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="price">
                </div>
                <div class="form-group">
                    <button class="btn btn-info btn-block">SUBMIT</button>
                </div>           
            </form>
            <a href="/campsites">GO BACK</a>
        </div>        
    </div>
    

<%- include("../partials/footer") %>