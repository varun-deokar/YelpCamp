<%- include("../partials/header") %>
  
    <div class="container">
        <h1 style="text-align:center;margin-bottom:20px">Update campsite information here</h1>
        <div style="width:30%;margin:0 auto;">
            <form action="/campsites/<%= campsite._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%= campsite.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="img" value="<%= campsite.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" value="<%= campsite.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-info btn-block">Update</button>
                </div>           
            </form>
            <a href="/campsites/<%= campsite._id %>">GO BACK</a>
        </div>        
    </div>
    

<%- include("../partials/footer") %>