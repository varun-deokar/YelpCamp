<%- include("../partials/header") %>
  
    <div class="container">
        <h1 style="text-align:center;margin-bottom:20px">Enter new comment about <%= campsite.name %></h1>
        <div style="width:30%;margin:0 auto;">
            <form action="/campsites/:<%= campsite._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Enter Comment">
                </div>
                <div class="form-group">
                    <button class="btn btn-info btn-block">SUBMIT</button>
                </div>           
            </form>
            <a href="/campsites/<%= campsite._id %>">GO BACK</a>
        </div>        
    </div>
    

<%- include("../partials/footer") %>