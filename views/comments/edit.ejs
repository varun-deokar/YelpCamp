<%- include("../partials/header") %>
  
    <div class="container">
        <h1 style="text-align:center;margin-bottom:20px">Update Comment</h1>
        <div style="width:30%;margin:0 auto;">
            <form action="/campsites/<%= campsite._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-info btn-block">Update</button>
                </div>           
            </form>
        </div>        
    </div>
    

